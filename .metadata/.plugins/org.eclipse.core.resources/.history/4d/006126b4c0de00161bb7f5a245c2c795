		do{
			Libro libro = new Libro();
			Object[] botones = {"Insertar al inicio", "Insertar al final"};

			opciones = JOptionPane.showOptionDialog(null, "¿Cómo desea ingresar?","Opciones",JOptionPane.DEFAULT_OPTION,JOptionPane.NO_OPTION,null,botones, botones[0]);

