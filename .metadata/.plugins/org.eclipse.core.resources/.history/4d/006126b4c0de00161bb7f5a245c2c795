		opciones2 = JOptionPane.showOptionDialog(null, "¿Cómo desea buscar?","Opciones",JOptionPane.DEFAULT_OPTION,JOptionPane.NO_OPTION,null,botonesBuscar, botonesBuscar[0]);
		switch(opciones2){
		case 0:{
			int busc = Integer.parseInt(JOptionPane.showInputDialog("Ingrese el NÚMERO del libro a buscar"));
			lista.buscar(busc);
			break;
		}

		case 1:{
			String busq = JOptionPane.showInputDialog("Ingrese el NOMBRE del libro a buscar");
			lista.Buscar(busq);
